(* Parser for block content *)
block = (syntax-in-block / any-char)*

<syntax-in-block> = (hashtag | page-link | block-ref | metadata-tag | code-line | query)
page-link = #"\[\[.*?\]\]"
hashtag = #"\#..*?(?=\s|$)" | #"#\[\[.*?\]\]"
block-ref = #"\(\(.*?\)\)"
metadata-tag = #"^.+?::"
code-line = #"\`.*?\`"
query = #"\{\{.*?:.*?\}\}"

any-chars = #'\w+|\W+'
<any-char> = #'\w|\W'